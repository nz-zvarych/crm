{% extends 'base.html.twig' %}

{% block body %}

<h1>Homepage</h1>

{% if app.user %}
    <div class="mb-3">
        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
    </div>
{% else %}
    <p>
        <a href={{ path("app_register") }}>Register</a> or <a href={{ path("app_login") }}>log in</a>.
    </p>
{% endif %}


{% endblock %}